<div class="post-show-card">

  <!-- Left column - text content -->
  <div class="post-show-left">
    <h1 class="post-title"><%= @post.title %></h1>
    <h2 class="post-tagline"><%= @post.tagline %></h2>
    <p class="post-summary"><%= @post.summary %></p>

    <% @post.post_sections.each do |section| %>
      <div class="post-section">
        <h3><%= section.heading %></h3>
        <p><%= section.content %></p>
      </div>
    <% end %>
  </div>

  <!-- right column: Avatar + Upvote + Image -->
  <div class="post-show-right">
    <div class="right-column-content">
      <!-- Avatar -->
      <!-- TODO: Replace placeholder image with user-provided image -->
      <%= image_tag "Avatar_placeholder.png", class: "avatar-large" %>

      <!-- Upvote -->
      <div class="upvote-block large">
        <div class="upvote-btn">
          üëç
        </div>
        <div class="upvote-count">
          <%= @post.upvotes %>
        </div>
      </div>

      <!-- TODO: Replace placeholder image with AI-generated or user-provided image -->
      <%= image_tag "image.png", class: "post-image" %>
    </div>
  </div>

</div>

<!-- Feedback section -->
<div class="feedback-section">
  <h3>Feedback</h3>

  <!-- TODO: Add a form to submit feedback -->


  <% @post.feedbacks.each do |feedback| %>
    <div class="feedback-card">
      <div class="content-with-upvote">
        <div class="upvote-block">
          <button class="upvote-btn">üëç</button>
          <!-- TODO: Add feedback upvotes when seed file has them-->
          <div class="upvote-count"><%= 12 %></div>
        </div>
        <p><strong><%= feedback.user.first_name %>:</strong> <%= feedback.content %></p>
      </div>

      <!-- Replies -->
      <% feedback.replies.each do |reply| %>
        <div class="feedback-reply">
          <div class="content-with-upvote">
            <div class="upvote-block">
              <button class="upvote-btn">üëç</button>
              <!-- TODO: Add reply upvotes when seed file has them-->
              <div class="upvote-count"><%= 12 %></div>
            </div>
            <p><strong><%= reply.user.first_name %>:</strong> <%= reply.content %></p>
          </div>
          <!-- TODO: Add a form to submit reply -->
        </div>
      <% end %>
    </div>
  <% end %>
</div>
