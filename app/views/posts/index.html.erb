<h1>Posts#index</h1>
<% @posts.each do |post| %>
  <%= link_to post_path(post), class: "post-card-link" do %> <!-- Make whole card clickable -->
    <div class="post-card">

      <!-- left side of card (upvotes + title + tagline) -->
      <div class="post-card-left">
        <div class="upvote-block vertical">
          <div class="upvote-btn">
            <i class="fa-regular fa-circle-up"></i>
          </div>
          <div class="upvote-count"><%= post.upvotes %></div>
        </div>
        <div class="post-info">
          <h5 class="post-title"><%= post.title %></h5>
          <p class="post-tagline"><%= post.tagline %></p>
        </div>
      </div>

      <!-- right side of card (avatar) -->
      <div>
        <!-- Placeholder avatars for now -->
        <%= image_tag "Avatar_placeholder.png", class: "avatar" %>
      </div>

    </div>
  <% end %>
<% end %>
